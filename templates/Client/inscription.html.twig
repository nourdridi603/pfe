{% extends 'base.html.twig' %}

{%  block body %}

        
        
<div style="border-radius: 58px;margin-left:25%;margin-right:30%" > 
<br>
    <h2 style="text-align: center; padding:20px; font-size: xx-large;"class="font-monospace" > Inscription Client </h2>
    <div style="margin:4%" class="font-monospace">
          {{form_start(form)}}
        <br>
         <p style="color: #0A1538;margin-left: 30px">{{form_label(form.nom)}}</p>
        <p style="margin-left: 290px;margin-top: -35px; margin-right:80px">{{form_widget(form.nom,{ 'attr': {'class': 'form-control'} })}}
        <br>
         <p style="color: #0A1538;margin-left: 30px">{{form_label(form.prenom)}}</p>
        <p style="margin-left: 290px;margin-top: -35px; margin-right:80px">{{form_widget(form.prenom,{ 'attr': {'class': 'form-control'} })}}</p>
        <br>
        <p style="color: #0A1538;margin-left: 30px">{{form_label(form.email)}}</p>
        <p style="margin-left: 290px;margin-top: -35px; margin-right:80px">{{form_widget(form.email,{ 'attr': {'class': 'form-control'} })}}</p>
        <br>
         <p style="color: #0A1538;margin-left: 30px">{{form_label(form.password.first)}}</p>
        <p style="margin-left: 290px;margin-top: -35px; margin-right:80px">{{form_widget(form.password.first,{ 'attr': {'class': 'form-control'} })}}</p>
        <br>
        <p style="color: #0A1538;margin-left: 30px">{{form_label(form.password.second)}}</p>
        <p style="margin-left: 290px;margin-top: -35px; margin-right:80px">{{form_widget(form.password.second,{ 'attr': {'class': 'form-control'} })}}</p>
      
  
         
        <p >{{form_widget(form.submit,{ 'attr': {'class': 'btn btn-primary', 'style': 'margin:1% ;color:white;margin-left: 250px; '} })}}</p>
       
           {{form_end(form)}}
          

</div>
        
        </br>
      </div>
   </div>

          

{% endblock %}